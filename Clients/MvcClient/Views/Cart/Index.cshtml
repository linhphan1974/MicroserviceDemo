@using BookOnline.MvcClient.Models
@using BookOnline.MvcClient.Services
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@inject IIdentityParser<ApplicationUser> UserManager

        <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Your Cart</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
            @await Component.InvokeAsync("Carts", new { userId = UserManager.Parse(User).Id })
          <!--Cart left-->
            @await Component.InvokeAsync("CartCheckout", new { userId = UserManager.Parse(User).Id })
          <!--Checkout and borrow summary-->
        </div>
      </div>
    </section>

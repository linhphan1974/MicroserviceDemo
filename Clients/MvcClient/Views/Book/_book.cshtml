@model BookOnline.MvcClient.Models.BookItemDto


@*<form asp-controller="Cart" asp-action="AddToCart">*@

            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
              <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                  @Model.Catalog.Name
                </div>
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-7">
                      <h2 class="lead"><b>@Model.Title</b></h2>
                      <p class="text-muted text-sm"><b>Author: </b> @Model.Author </p>
                      <ul class="ml-4 mb-0 fa-ul text-muted">
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Code: @Model.ISBN</li>
                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Version: @Model.Version</li>
                      </ul>
                    </div>
                    <div class="col-5 text-center">
                      <img src="@Model.PictureUrl" class="img-fluid">
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <div class="text-right">
                      @if(User.Identity.IsAuthenticated)
                      {
                    <a href="#" class="btn btn-sm btn-primary btn-add-to-cart" data-book-id="@Model.Id">
                        <i class="fas fa-cart-plus"></i> Add to Cart
                    </a>
                      }
                  </div>
                </div>
              </div>
            </div>
    <input type="hidden" asp-for="@Model.Id" name="id" />
@*</form>*@
